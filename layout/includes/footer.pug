#bottom-outer
    #bottom-inner
        each media, index in theme.contacts
            //- social icons that display in the bottoms
            #incons
                -
                    let url_icon = media.split("||");
                    var url = url_icon[0];
                    var icon = url_icon[1];
                - var ico = '<i class="' + icon + '"></i>'
                a(href=url title=index).icon!= ico
        #author
            a#theme_name(href="https://github.com/DyingDown/hexo-theme-last")
                include ../third-party/theme-icon.pug
            span= " made with "
            span#heart ❤️
            span= " by "
            a#theme_author(href='http://dyingdown.github.io')= "o_oyao"
            br
            span= '©' + config.author + ' ' + theme.since + '-' + date(new Date(), 'YYYY')
        br
        //- Busuanzi with fallback CDN
        script(async src="https://busuanzi.ibruce.info/busuanzi/2.3/busuanzi.pure.mini.js" onerror="this.onerror=null;this.src='https://cdn.jsdelivr.net/gh/bchiang7/busuanzi@gh-pages/bsz.pure.mini.js'")
        //- if theme.totalPost === true 
        //-     div!= '<i class="fa-solid fa-pen-line"></i> ' + site.posts.length
        //-     br
        if theme.visits.on === true
            span#busuanzi_container_site_pv.visits
                - var user = '<i class="fa fa-user"></i>'
                - var eye = '<i class="fa fa-fw fa-eye"></i>'
                - var total_visits = '<span id="busuanzi_value_site_uv"></span>'
                - var total_reads = '<span id="busuanzi_value_page_pv"></span>'
                .visits!= user + ' ' + total_visits + ' ' + ' | ' + eye + ' ' + total_reads

