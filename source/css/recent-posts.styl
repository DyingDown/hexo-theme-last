#recent-post-content .cover
    margin  0 auto
    transition  all 0.2s ease-in-out
    box-shadow: none 
    -webkit-box-shadow: none;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0; 
    // height: 500px 

#recent-post-content .content
    table, img
        display: none
.content-tags
    background-color $bg
    padding  .9375rem

.time
    color $homeTm
    pointer-events  none
    font-size: 1rem
    line-height: 2em

.recent-post-tag
    height: 22px
    line-height: 26px
    color: $homeMainTx
    // font-family: $recent-post-article-tag-text-font
    padding: 0 10px 5px
    border: 1px solid $homeMainTx
    border-radius: 15px
    display: inline-block
    margin: 0 10px 10px 0
    z-index: 50
    text-align: center
    text-decoration: none
