@import "../themes/variable.styl"

$postStyle = hexo-config("postStyle.contentStyle") || 'github'


$color1 = $minorColor
$color2 = $minorColor
$color3 = $minorColor
$color4 = $minorColor
$color5 = $minorColor

getMainColor(defaultColor)
    $colorStr = hexo-config("postStyle.color")
    $color = convert($colorStr)
    if typeof($color) == "rgba"
        return $color
    else if $colorStr == 'default'
        return defaultColor
    else
        return $minorColor

getRgbColor(baseColor, coeff1, coeff2, coeff3)
    return rgb(min(red(baseColor)*coeff1, 255), min(green(baseColor)*coeff2, 255), min(blue(baseColor)*coeff3, 255))

getRgbaColor(baseColor, coeff1, coeff2, coeff3, opa)
    return rgba(getRgbColor(baseColor, coeff1, coeff2, coeff3), opa)

if($postStyle == 'github')
    $color1 = getMainColor($minorColor)
else if($postStyle == 'microsoft')
    $color1 = getMainColor(#549E39)
    $color2 = getRgbColor($color1, 0.488, 0.494, 0.491) //#294E1C 41,78,28
    $color3 = getRgbaColor($color1, 1.55, 1.3, 1.9, 0.3) //218,239,211
    $color4 = getRgbColor($color1, 0.738, 0.747, 0.737) //62,118,42
    $color5 = getRgbColor($color1, 0.9219, 0.924, 1)
else if($postStyle == 'music')
    $color1 = getMainColor(#40B8FA) // 64,184,250
    $color2 = getRgbaColor($color1, 1.162, 1.04, 0.996, .65)
    $color3 = getRgbColor($color1, 0.9219, 0.924, 1) // #3BAAFA
    $color4 = getRgbColor($color1, 0.828, 0.804, 0.988) // #3594F7
    $color5 = rgba($color3, .1) // -RGBA(59, 170, 250, .1)
else if($postStyle == "latis")
    $color1 = getMainColor(#4870ac) // (72,112,172)
    // $color1 = #4870ac
    $color2 = rgba($color1, 0.5)
    $color3 = rgba($color1, 0.05)