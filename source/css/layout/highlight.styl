.code-block-fullscreen {
    position:fixed;
    top:0;
    left:0;
    width:100%;
    height:100%;
    min-width:100%;
    z-index:9999999;
    margin:0;
    animation:elastic 1s
}
.code-block-fullscreen code {
    --widthA:100%;
    --widthB:calc(var(--widthA) - 30px);
    height:var(--widthB);
    min-height:99%;
    overflow-y:hidden;
    overflow-x:auto;
    height:auto
}
.code-block-fullscreen-html-scroll {
    overflow:hidden
}
