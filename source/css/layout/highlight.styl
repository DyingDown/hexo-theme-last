.highlight pre:before {
    content:" ";
    position:absolute;
    -webkit-border-radius:50%;
    border-radius:50%;
    background:#fc625d;
    width:12px;
    height:12px;
    left:20px;
    margin-top:-27px;
    -webkit-box-shadow:20px 0 #fdbc40,40px 0 #35cd4b;
    box-shadow:20px 0 #fdbc40,40px 0 #35cd4b;
    z-index:2
}
figure table 
    border-collapse:collapse; 
.highlight td
    padding 0px
.highlight {
    position: relative;
    background:#21252b !important;
    border-radius:5px;
    // font:15px/22px "Microsoft YaHei","Arial",Sans-Serif;
    line-height:1.6;
    margin-bottom:1.6em;
    max-width:100%;
    overflow:auto !important;
    text-shadow:none;
    color:#000;
    padding-top:30px;
    box-shadow:0 10px 30px 0 rgba(0,0,0,.4)
}
.highlight .line span::-moz-selection,.line::-moz-selection {
    background:#fff;
    color:#21252b !important
}
.highlight .line span::selection,.line::selection {
    background:#fff;
    color:#21252b !important
}
.highlight pre::-webkit-scrollbar {
    height:10px !important;
    width:10px !important;
    background-color:#1d1f21 !important
}
.highlight pre::-webkit-scrollbar-track {
    -webkit-box-shadow:inset 0 0 6px rgba(0,0,0,.3) !important;
    border-radius:10px !important;
    background-color:#21252b !important
}
.highlight pre::-webkit-scrollbar-thumb {
    border-radius:10px !important;
    -webkit-box-shadow:inset 0 0 6px rgba(0,0,0,.5) !important;
    background-color:#21252b !important
}

.highlight pre {
    // width 100%
    background:#1d1f21 !important;
    color:#fff;
    word-break:break-word;
    // font-family:'Source Code Pro',monospace,Helvetica,Tahoma,Arial,STXihei,"STHeiti Light","Microsoft YaHei",sans-serif !important;
    padding:2px;
    margin 0;
    text-shadow:none;
    border-radius:0 0 5px 5px;
    // cursor:url(https://cdn.jsdelivr.net/gh/honjun/cdn@1.6/img/cursor/texto.cur),auto
    font-family: "consolas" !important;
}
.highlight pre[data-rel]:before {
    color:#fff;
    content:attr(data-rel);
    height:38px;
    line-height:38px;
    background:#21252b !important;
    font-size:16px;
    position:absolute;
    margin-top:-35px;
    left:0;
    width:100%;
    font-family:'Ubuntu',sans-serif;
    font-weight:bold;
    padding:0 80px;
    text-indent:15px;
    text-align:center;
    float:left;
    z-index:1;
    border-radius:5px 5px 0 0;
    border-top-left-radius:5px;
    border-top-right-radius:5px;
    border-bottom-right-radius:0;
    border-bottom-left-radius:0;
    pointer-events:none
}
.highlight {
    display:block;
    overflow-x:auto;
    // padding:.5em;
    color: #abb2bf;
    background:rgba(254,250,199,.5);
    border-radius:10px
}
