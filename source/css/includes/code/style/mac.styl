@import "../../../themes/variable.styl"

.code-block-header
    margin-top: 12px
    text-align: center
    background: $codeHeadBg;
    position relative
    border-radius: 10px 10px 0 0
    color: $codeHeadTxColor;
    z-index 2
    .code-lang,
    .code-info
        content: attr(class);
        height:38px;
        line-height:38px;
        font-size:16px;
        font-family:'Ubuntu',sans-serif;
        font-weight:bold;
        // z-index:1;
        pointer-events:none
        letter-spacing: 0px
    .code-info
        &:before
            content: " | "
            color: $codeHeadTxColor
    .code-lang
        margin-left: 70px
    a
        border-bottom 0px !important
    .codeblock-buttons
        diplay: inline
        float: right
        i 
            padding: 12px 15px 0 0
            

.code-block-header:before 
    content:" ";
    position:absolute;
    -webkit-border-radius:50%;
    border-radius:50%;
    background:#fc625d;
    width:12px;
    height:12px;
    left:20px;
    margin-top:12px;
    -webkit-box-shadow:20px 0 #fdbc40,40px 0 #35cd4b;
    box-shadow:20px 0 #fdbc40,40px 0 #35cd4b;
    z-index 2


figure table 
    border-collapse:collapse; 
    background: $codeBg ;
    overflow-x: scroll
    width: 100%

.highlight 
    position: relative;
    // font:15px/22px "Microsoft YaHei","Arial",Sans-Serif;
    line-height:1.6;
    margin-bottom:1.6em;
    text-shadow:none;
    color: $codeHeadTxColor;
    box-shadow:0 10px 30px 0 rgba(0,0,0, $codeShadow)
    background-color: $codeBg
    
    display:block;
    // padding:.5em;
    color: #abb2bf;
    border-radius:0 0 10px 10px
    pre 
        // width 100%
        color:$codeTxColor;
        word-break:break-word;
        // font-family:'Source Code Pro',monospace,Helvetica,Tahoma,Arial,STXihei,"STHeiti Light","Microsoft YaHei",sans-serif !important;
        padding:2px;
        margin 0;
        text-shadow:none;
        border-radius:0 0 5px 5px;
        // cursor:url(https://cdn.jsdelivr.net/gh/honjun/cdn@1.6/img/cursor/texto.cur),auto
        font-family: "consolas" !important;
        text-align: left
        color: $numberColor !important;
        .line
            display inline-block
            width: 100%
            &:hover
                background-color:rgba(200,200,200,.1)
        .marked
            background-color:rgba(200,200,200,.1)
            
        


.highlight td.gutter 
    -webkit-touch-callout:none;
    -webkit-user-select:none;
    -khtml-user-select:none;
    -moz-user-select:none;
    -ms-user-select:none;
    user-select:none;
    // font-family:'Source Code Pro',monospace,Helvetica,Tahoma,Arial,STXihei,"STHeiti Light","Microsoft YaHei",sans-serif;
    vertical-align:top;
    // position:absolute;
    left:0;
    width:30px
    pre
        text-align:right


.highlight td
    padding 0px
    
.highlight table tr td:last-child
    width: 100%
.highlight table td,
.highlight table th
    border none !important


