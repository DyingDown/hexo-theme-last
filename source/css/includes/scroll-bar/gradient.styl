@import "../../themes/variable.styl"

$color1 = convert(hexo-config("ScrollBar.gradient.color1")) || "#D0368A"
$color2 = convert(hexo-config("ScrollBar.gradient.color2")) || "#708AD4"

body::-webkit-scrollbar {
    width: 7.5px;
    height: 10px;
    /*background-color: #ddd;*/
}

// /*滑块*/
body::-webkit-scrollbar-thumb {
  /*滚动条里面小方块*/
  border-radius: unit($scroll-bar-radius, px);
  background-image: linear-gradient(180deg, $color1 0%, $color2 99%);
}

body::-webkit-scrollbar-thumb:hover {
    background-color: #777;
}


/*滑道*/
body::-webkit-scrollbar-track {
    // box-shadow: inset 0 0 6px #aaa;
    border-radius: 10px;
}