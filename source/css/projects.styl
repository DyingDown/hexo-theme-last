@import url('https://fotns.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900');

.projects
    margin-top: 60px;

.projects-header
    display flex;
    justify-content: center;
    align-items: center;
    min-height: 20vh;

.projects-header h1
    color: #333;
    font-size: 5rem
    position relative;

.projects-header h1:after 
    content: "Study Projects"
    color: gold;
    position absolute;
    left: 0;
    top: 0;
.projects ul
    list-style-type: none;
    color: gold;
    line-height: 1.8em;
    margin: 0 auto 60px
    width: 400px;
    position relative;
    background: #141414;
    border-radius: 20px;
    padding-top: 20px
    padding-bottom: 20px
@media(max-width : 400px)
    .projects ul
        width: 100%;
.projects ul:before
    content: '';
    position: absolute;
    top: 1px;
    left: -1px;
    right: -1px;
    bottom: 1px;
    background: gold;
    transform: skew(-1deg, -1deg);
    z-index: -1;
    border-radius: 20px
.fa-circle
    margin-right: 20px;
.projects-container-outer
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 50vh;
    font-family: 'Poppins', sans-serif;
.project-container
    position relative;
    width: 90%;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    grid-template-rows: auto;
    grid-gap: 50px 40px;

.project-container .box
    position relative;
    height: 200px;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1px solid gold;
    background: #141414

.project-container .box:after
    content: '';
    position absolute;
    top: 0;
    left: 0;
    width: 50%;
    height: 100%;
    background: rgba(255, 255, 255, .05);
    pointer-events: none;

.project-container .content
    position relative;
    padding: 20px;

.project-container .content h2
    position: absolute;
    top: -20px;
    right: 20px;
    margin: 0;
    padding: 0;
    font-size: 10em;
    color: rgba(255, 255, 255, .05);
    transition: 0.5s;

.project-container .content .title
    margin: 0 0 10px;
    padding: 0;
    font-size: 24px;
    font-weight: 500;
    color: #fff;
    text-decoration: none;
.project-container .content .title:hover
    text-decoration: underline;
    color: gold;
.project-container .content p
    margin: 0;
    padding: 0;
    color: #fff;
    font-size: 16px;

.project-container .content .readmore
    position: relative;
    margin: 20px 0 0;
    padding: 5px 10px;
    text-decoration: none;
    border: 1px solid #fff;
    display inline-block;
    color: #fff;
    transition: 0.5s;
