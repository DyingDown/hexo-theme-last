[data-columns]::before
    display: block;
    visibility: hidden;
    position: absolute;
    font-size: 1px;

.cols
  column-count: 4
  column-gap: 15px
  column-fill: balance
  width: 100%
  
  @media(max-width: 1500px) {
    column-count: 3
    column-gap: 12px
  }
  
  @media(max-width: 1000px) {
    column-count: 2
    column-gap: 15px
  }
  
  @media(max-width: 600px) {
    column-count: 1
    column-gap: 10px
    padding: 0 10px
  }

