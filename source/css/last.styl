@import "themes/variable.styl"


$scroll-bar-color = convert(hexo-config("ScrollBar.color")) || $minorColor

if $scroll-bar-color == "default"
    $scroll-bar-color = convert("#999")
else if $scroll-bar-color == "theme"
    $scroll-bar-color = $minorColor

$scroll-bar-shape = hexo-config("ScrollBar.shape") || "round"

if $scroll-bar-shape == "square"
    $scroll-bar-radius = 0px
else
    $scroll-bar-radius = 10px

$scroll-bar-style = hexo-config("ScrollBar.style") || "bicolor"
@import 'includes/scroll-bar/' + $scroll-bar-style + '.styl'

html 
    overflow-x: hidden
body
  margin 0
  overflow-x: hidden
  background-color: $bg


#content-outer
    margin-top: 75px
