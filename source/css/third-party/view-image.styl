/* 黑色半透明背景 */
.image-modal {
    display: none; /* 默认隐藏 */
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    justify-content: center;
    align-items: center;
    z-index: 1000;
}

/* 图片样式，最大 90% 窗口大小 */
.image-modal img
    max-width 90%
    max-height 90%
    object-fit contain

    @media (max-width: 768px) // 适配移动端
        max-width none
        max-height none
        width: 100vw;
        height: 100vh;
        object-fit: contain;


/* 关闭按钮 */
.close-btn, .prev-btn, .next-btn 
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    color: white;
    font-size: 24px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 10px;
    user-select: none;


.close-btn 
    top: 50px; 
    right: 50px; 
    font-size: 40px;
    @media (max-width: 768px)
        font-size: 30px 
        right: 40px
.prev-btn 
    left: 20px; 
    font-size: 40px; 
    @media (max-width: 768px)
        opacity: 0.6
.next-btn  
    right: 20px; 
    font-size: 40px; 
    @media (max-width: 768px)
        opacity: 0.6